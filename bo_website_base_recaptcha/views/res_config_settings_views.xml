<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.recaptcha</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='google_analytics_dashboard_setting']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="has_google_recaptcha_setting">
                    <div class="o_setting_left_pane">
                        <field name="has_google_recaptcha"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="has_google_recaptcha"/>
                        <div class="text-muted">
                            Visits in Google Recaptcha
                        </div>
                        <div class="content-group" attrs="{'invisible': [('has_google_recaptcha', '=', False)]}">
                            <div class="row mt16">
                                <label class="col-md-3 o_light_label" for="recaptcha_site_key"/>
                                <field name="recaptcha_site_key" placeholder="Your reCAPTCHA site key"/>
                            </div>
                            <div class="row mt16">
                                <label class="col-md-3 o_light_label" for="recaptcha_private_key"/>
                                <field name="recaptcha_private_key" placeholder="Your reCAPTCHA private key"/>
                            </div>
                        </div>
                        <div attrs="{'invisible': [('has_google_recaptcha', '=', False)]}">
                            Follow <a href="https://www.google.com/recaptcha/intro/index.html" class="oe_link fa fa-arrow-right" target="_blank"> the instructions </a> to create your key captcha.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
